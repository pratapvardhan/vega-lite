                {
                    "x": 18,
                    "y": 16
                },
                {
                    "x": 19,
                    "y": 49
                },
                {
                    "x": 20,
                    "y": 15
                }
            ]
        },
        {
            "name": "data_0",
            "source": "source_0",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toNumber(datum[\"x\"])",
                    "as": "x"
                },
                {
                    "type": "formula",
                    "expr": "datum.y - 50",
                    "as": "ny"
                },
                {
                    "type": "window",
                    "params": [
                        null
                    ],
                    "as": [
                        "RowNumber"
                    ],
                    "ops": [
                        "row_number"
                    ],
                    "fields": [
                        null
                    ]
                },
                {
                    "type": "filter",
                    "expr": "datum[\"ny\"] !== null && !isNaN(datum[\"ny\"]) && datum[\"x\"] !== null && !isNaN(datum[\"x\"])"
                }
            ]
        }
    ],
    "marks": [
        {
            "name": "layer_0_marks",
            "type": "rect",
            "clip": true,
            "style": [
                "bar"
            ],
            "from": {
                "data": "data_0"
            },
            "encode": {
                "update": {
                    "xc": {
                        "scale": "x",
                        "field": "ny"
                    },
                    "width": {
                        "value": 5
                    },
                    "y": {
                        "scale": "y",
                        "field": "x"
                    },
                    "y2": {
                        "field": {
                            "group": "height"
                        }
                    },
                    "fill": {
                        "value": "#4c78a8"
                    }
                }
            }
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "domain": {
                "data": "data_0",
                "field": "ny"
            },
            "range": [
                0,
                {
                    "signal": "width"
                }
            ],
            "nice": true,
            "zero": true,
            "padding": 5
        },
        {
            "name": "y",
            "type": "linear",
            "domain": [
                0,
                20
            ],
            "range": [
                {
                    "signal": "height"
                },
                0
            ],
            "nice": true,
            "zero": false
        }
    ],
    "axes": [
        {
            "scale": "x",
            "orient": "bottom",
            "labelFlush": true,
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "title": "ny",
            "zindex": 1
        },
        {
            "scale": "x",
            "orient": "bottom",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "tickCount": {
                "signal": "ceil(width/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "y"
        },
        {
            "title": "y",
            "scale": "y",
            "orient": "left",
            "labelOverlap": true,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "zindex": 1
        },
        {
            "scale": "y",
            "orient": "left",
            "domain": false,
            "grid": true,
            "labels": false,
            "maxExtent": 0,
            "minExtent": 0,
            "tickCount": {
                "signal": "ceil(height/40)"
            },
            "ticks": false,
            "zindex": 0,
            "gridScale": "x"
        }
    ],
    "config": {
        "axisY": {
            "minExtent": 30
        }
    }
}
