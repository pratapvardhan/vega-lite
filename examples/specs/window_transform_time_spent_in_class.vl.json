{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "description": "Bar graph showing how each film differs from the average rating for that year",
    "width": 300,
    "height": 50,
    "data": {
        "values": [
            { "student": "A", "Class": "CSE 101", "TimeOfDay": 8, "Length": 45 },
            { "student": "A", "Class": "PHIL 101", "TimeOfDay": 10, "Length": 70 },
            { "student": "A", "Class": "CHEM 101", "TimeOfDay": 12, "Length": 30 },
            { "student": "A", "Class": "BIO 101", "TimeOfDay": 15, "Length": 45 },
            { "student": "B", "Class": "CSE 101", "TimeOfDay": 8, "Length": 45 },
            { "student": "B", "Class": "CHEM 101", "TimeOfDay": 12, "Length": 30 },
            { "student": "B", "Class": "BIO 101", "TimeOfDay": 15, "Length": 45 }
        ]
    },
    "layer": [{
        "transform": [{
            "window": [{
                "op": "sum",
                "field": "Length",
                "as": "TimeInClass"
            }],
            "sort": { "field": "TimeOfDay", "order": "ascending" },
            "groupby": [
                "Student"
            ],
            "frame": [null, 0]
        }],
        "mark": { "type": "bar", "clip": true },
        "encoding": {
            "column": {
                "field": "student",
                "type": "nominal"
            },
            "x": {
                "field": "Class",
                "type": "nominal",
                "scale": { "rangeStep": 12 },
                "axis": { "title": "" }
            },
            "y": {
                "field": "TimeInClass",
                "type": "quantitative",
                "axis": { "title": "Fatigue", "grid": false }
            },
            "color": {
                "field": "student",
                "type": "nominal"
            }
        },
        "config": {
            "view": { "stroke": "transparent" },
            "axis": { "domainWidth": 1 }
        }
    }]
}